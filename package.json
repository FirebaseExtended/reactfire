{
  "name": "reactfire",
  "description": "Firebase mixin for ReactJS",
  "version": "0.0.0",
  "author": "Firebase (https://firebase.google.com/)",
  "homepage": "https://github.com/firebase/reactfire/",
  "repository": {
    "type": "git",
    "url": "https://github.com/firebase/reactfire.git"
  },
  "bugs": {
    "url": "https://github.com/firebase/reactfire/issues"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "mixin",
    "firebase",
    "realtime",
    "react-component"
  ],
  "jest": {
    "testEnvironment": "node"
  },
  "main": "dist/reactfire.js",
  "files": [
    "dist/**",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "dependencies": {},
  "peerDependencies": {
    "react": "15.x.x",
    "firebase": "3.x.x"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.0",
    "babel-jest": "^18.0.0",
    "babel-preset-babili": "0.0.11",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-register": "^6.23.0",
    "coveralls": "^2.11.16",
    "eslint": "^3.16.0",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "firebase": "3.x.x",
    "gulp": "^3.9.0",
    "gulp-babel": "^6.1.2",
    "gulp-eslint": "^3.0.1",
    "gulp-exit": "0.0.2",
    "gulp-ext-replace": "^0.3.0",
    "gulp-istanbul": "^1.1.1",
    "gulp-uglify": "^2.0.0",
    "jest": "^18.1.0",
    "npm-watch": "^0.1.8",
    "react": "15.x.x",
    "react-addons-test-utils": "15.x.x",
    "react-dom": "15.x.x",
    "react-test-renderer": "^15.4.1",
    "run-sequence": "^1.1.1"
  },
  "watch": {
    "test": "{src,tests}/**/*.js"
  },
  "scripts": {
    "test": "npm run lint ; npm run build ; jest --coverage",
    "lint": "eslint src/ tests/",
    "build": "npm run cleanup ; npm run compileDev & npm run compileProd",
    "compileDev": "babel src/ --out-file dist/reactfire.js",
    "compileProd": "babel src/ --out-file dist/reactfire.min.js --presets=babili",
    "cleanup": "rm -rf dist/ ; mkdir dist/",
    "watch": "npm-watch"
  }
}
